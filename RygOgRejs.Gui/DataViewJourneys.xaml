<UserControl x:Class="RygOgRejs.Gui.DataViewJourneys"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RygOgRejs.Gui"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Label Content="Filtrer på betaler:" />
            <TextBox x:Name="textBoxFilterJourneys"
                     Height="20"
                     Width="200"
                     TextChanged="TextBoxFilterJourneys_TextChanged" />
        </StackPanel>
        <DataGrid x:Name="dataGridJourneys"
                  Grid.Row="1"
                  IsReadOnly="True"
                  Margin="5" />
    </Grid>
</UserControl>
